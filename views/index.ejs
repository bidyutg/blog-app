<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Blog Index</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <header>
    <h1>üé• Vlogging Blog</h1>
    <nav>
      <a href="/signup">Sign Up</a>
      <a href="/login">Log In</a>
    </nav>
  </header>

  <main>
    <h2>üìù All Articles</h2>

    <div class="articles-container">
      <% articles.forEach(article => { %>
        <div class="article-card">
          <h3><%= article.title %></h3>

          <!-- Short Preview -->
          <p id="short-content-<%= article._id %>">
            <%= article.content.substring(0, 150) %>...
          </p>

          <!-- Image (if any) -->
          <% if (article.image) { %>
            <img src="<%= article.image %>" alt="Article Image" class="article-image">
          <% } %>

          <!-- Full Content -->
          <div id="full-content-<%= article._id %>" class="full-content">
            <p><%= article.content %></p>
          </div>

          <!-- Buttons -->
          <div class="button-group">
            <button id="see-more-btn-<%= article._id %>" onclick="toggleContent('<%= article._id %>')">See More</button>
            <button onclick="likeArticle('<%= article._id %>')">‚ù§Ô∏è Like</button>
          </div>

          <!-- Comment Section -->
          <div class="comment-section">
            <input type="text" id="comment-input-<%= article._id %>" placeholder="Add a comment...">
            <button onclick="submitComment('<%= article._id %>')">Post</button>
            <div id="comments-<%= article._id %>" class="comments-list"></div>
          </div>
        </div>
      <% }) %>
    </div>
  </main>

  <script src="/script.js"></script>
</body>
</html>
